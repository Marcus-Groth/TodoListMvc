@model TaskItem

@{
    ViewData["Title"] = "Create New Task";
}

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" required minlength="3" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" required minlength="3" class="form-control"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-3 form-check">
        <input asp-for="IsComplete" class="form-check-input" />
        <label asp-for="IsComplete" class="form-check-label">Mark as Completed</label>
    </div>

    <button type="submit" class="btn btn-success">Create new Task</button>
    <a asp-action="Index" class="btn btn-primary">Go Back</a>
</form>
